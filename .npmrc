# NPM Configuration for Enterprise Environments
# This file ensures consistent behavior across all platforms

# Use legacy peer dependency resolution (avoids conflicts)
legacy-peer-deps=true

# Save exact versions (no ^ or ~ prefixes)
save-exact=true

# Security and audit settings
audit-level=moderate
fund=false

# Package lock behavior
package-lock=true

# Engine strict (enforce Node version requirements)
engine-strict=false

# Progress and logging
loglevel=warn
progress=true

# Cache settings
cache=.npm-cache
prefer-offline=false

# Optional: Uncomment if using private registry
# registry=https://your-private-registry.com/

# Optional: Uncomment for corporate proxy
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080
